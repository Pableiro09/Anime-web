<?xml version="1.0" encoding="UTF-8"?>
    <xs:element Nombre="Lista anime" type="Lista tipos de Anime"/>
    <xs:complexType Nombre="Lista tipos de Anime">
        <xs:sequence>
            <xs:element Nombre="anime" type="TipoAnime" maxOccurs="unbounded"/>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType Nombre="animeType">
        <xs:sequence>
            <xs:element Nombre="premios" type="tipoPremios"/>
        </xs:sequence>
        <xs:attribute Nombre="Titulo" type="xs:string" use="required"/>
        <xs:attribute Nombre="Descripcion" type="xs:string" use="required"/>
        <xs:attribute Nombre="Duracion" type="xs:integer" use="required"/>
        <xs:attribute Nombre="Genero" type="xs:string" use="required"/>
        <xs:attribute Nombre="FechaDeSalida" type="xs:date" use="required"/>
    </xs:complexType>
    <xs:complexType Nombre="Tipo de premio">
        <xs:sequence>
            <xs:element Nombre="Premio" type="Tipo de premio" maxOccurs="unbounded"/>
        </xs:sequence>
        </xs:complexType>
        </xs:schema>
    </xs:complexType>
